<?xml version="1.0" encoding="ISO-8859-1" ?> 
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="people" type="net.woodstoc.rockframework.test.struts.PeopleForm" />
	</form-beans>

	<global-exceptions>
	</global-exceptions>

	<global-forwards>
		<forward name="index" path="/index.do" />
	</global-forwards>

	<action-mappings>
		<action path="/people" name="people" type="net.woodstoc.rockframework.test.struts.PeopleAction" validate="false" scope="request">
			<forward name="success" path="/people.tiles" />
		</action>
	</action-mappings>

	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" bufferSize="4096"/>
	
	<message-resources parameter="ApplicationResource" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles.xml" />
        <set-property property="definitions-parser-validate" value="true" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml, /WEB-INF/validation.xml" />
	</plug-in>
	
</struts-config>