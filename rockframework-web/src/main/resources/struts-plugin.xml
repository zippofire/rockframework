<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="rockframework-default" extends="struts-default" abstract="true">
		<result-types>
            <result-type name="rockframework-json" class="net.woodstock.rockframework.web.struts2.result.JsonResult"/>
        </result-types>
		<interceptors>
			<interceptor name="entity" class="net.woodstock.rockframework.web.struts2.interceptor.EntityInterceptor" />
			<interceptor name="initializable" class="net.woodstock.rockframework.web.struts2.interceptor.InitializableInterceptor" />
			<interceptor name="around" class="net.woodstock.rockframework.web.struts2.interceptor.AroundInterceptor" />
			<interceptor name="annotationAround" class="net.woodstock.rockframework.web.struts2.interceptor.AnnotationAroundInterceptor" />
			<interceptor-stack name="entityStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="entity" />
				<interceptor-ref name="initializable" />
				<interceptor-ref name="around" />
				<interceptor-ref name="annotationAround" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="entityStack" />
	</package>
	
	<package name="rockframework-json-default" extends="rockframework-default" abstract="true">
		<result-types>
            <result-type name="json" class="net.woodstock.rockframework.web.struts2.result.JsonResultDecorator"/>
        </result-types>
	</package>
	
	<package name="rockframework-tiles-default" extends="tiles-default" abstract="true">
		<result-types>
            <result-type name="rockframework-json" class="net.woodstock.rockframework.web.struts2.result.JsonResult"/>
        </result-types>
		<interceptors>
			<interceptor name="entity" class="net.woodstock.rockframework.web.struts2.interceptor.EntityInterceptor" />
			<interceptor name="initializable" class="net.woodstock.rockframework.web.struts2.interceptor.InitializableInterceptor" />
			<interceptor name="around" class="net.woodstock.rockframework.web.struts2.interceptor.AroundInterceptor" />
			<interceptor name="annotationAround" class="net.woodstock.rockframework.web.struts2.interceptor.AnnotationAroundInterceptor" />
			<interceptor-stack name="entityStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="entity" />
				<interceptor-ref name="initializable" />
				<interceptor-ref name="around" />
				<interceptor-ref name="annotationAround" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="entityStack" />
	</package>

</struts>
